# Add brand (Audi)
POST http://localhost:9090/graphql
Content-Type: application/json

{
  "query": "mutation addBrand($brand: BrandInput!){  addBrand(brand: $brand) {      id   name    country  managerName }}",
  "variables": {
  	"brand": {
	  	"name": "Audi",
		"country": "Germany",
		"managerName": "Hans"
  	}
  }
}


