type Brand {
	id: ID!,
	name: String,
	country: String,
	managerName: String,
	currency: String
}

input BrandInput {
	name: String!,
	country: String!,
	managerName: String!
}

input SubBrandInput {
	name: String!,
	country: String!,
	subBrandOf: String!
}



extend type Query {
	brands(count: Int): [Brand]
}

extend type Mutation {
	addBrand(brand: BrandInput!): Brand
	updateBrand(id: ID!, brand: BrandInput!): Brand
	addSubBrand(brand: SubBrandInput!): Brand
}
